{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "env": {
    "SECRET_KEY": "your-secret-key-for-vercel",
    "PYTHONUNBUFFERED": "1",
    "VERCEL": "1",
    "INSTANCE_PATH": "/tmp/instance",
    "DATA_DIR": "/tmp/data"
  }
}


